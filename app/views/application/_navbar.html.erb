<div class="navbar footer first-footer">
	<div class="container">
		<div class="navbar navbar-collapse">
			<span>
				<a href="<%= root_path %>" class="navbar-brand navbar-logo"><img src="<%= image_url 'logo.png' %>"></a>
			</span>
			<span class="navbar-mami-brand-text">
				<div class="header-text_first">
					МОСКОВСКИЙ ГОСУДАРСТВЕННЫЙ
				</div>
				<div class="header-text_second">
					МАШИНОСТРОИТЕЛЬНЫЙ УНИВЕРСИТЕТ (МАМИ)
				</div>
				<div class="header-text_third">
					УНИВЕРСИТЕТ МАШИНОСТРОЕНИЯ
				</div>
			</span>
		</div>
	</div>
</div>

<div class="navbar footer main-navbar-mami">
  <div class="container">
    <div class="navbar-header">
	    <%= link_to ?#, class: 'navbar-toggle collapsed link-nav', data: { toggle: 'collapse', target: '#menu' } do %>
	      <%= fa_icon 'bars' %>
	    <% end %>
      <%= link_to t(:profile), @current_user, class: 'navbar-brand link-nav' %>
    </div>
	  <div id="menu" class="collapse navbar-collapse">
		  <ul class="nav navbar-nav">
			  <% if @current_user.presence %>
				  <% if @current_user.role == 0 %>
				    <li><%= link_to t(:my_group), @current_user.group, class: 'link-nav' %></li>
						<li><%= link_to t(:my_disciplines), disciplines_path, class: 'link-nav' %></li>
		        <li><%= link_to t(:my_documents), documents_path, class: 'link-nav' %></li>
				  <% elsif @current_user.role == 1 %>
            <li><%= link_to t(:my_disciplines), disciplines_path, class: 'link-nav' %></li>
		        <li><%= link_to t(:my_documents), documents_path, class: 'link-nav' %></li>
          <% else %>
            <li><%= link_to t(:all_users), users_path, class: 'link-nav' %></li>
            <li><%= link_to t(:all_groups), groups_path, class: 'link-nav' %></li>
            <li><%= link_to t(:all_disciplines), disciplines_path, class: 'link-nav' %></li>
		        <li><%= link_to t(:all_documents), documents_path, class: 'link-nav' %></li>
				  <% end %>
        <% end %>
		  </ul>
	    <ul class="nav navbar-nav navbar-right">
				<div class="dropdown">
					<% unless @current_user %>
						<a class="dropdown-toggle" href="#" data-target="#" data-toggle="dropdown">Доступные действия <span class="fa fa-caret-down-o"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li><%= link_to t(:login), login_path, class: 'link-nav' %></li>
						</ul>
					<% else %>
						<a class="dropdown-toggle" href="#" data-target="#" data-toggle="dropdown"><%= @current_user.login %> <span class="fa fa-caret-down"></span></a>
						<ul class="dropdown-menu dropd_menu_right_nav" role="menu">
							<% if @current_user.student? %>
								<li><%= link_to t(:your_points), logout_path, data: { method: :patch }, class: 'link-nav' %><li>
							<% end %>
							<li><%= link_to t(:logout), logout_path, data: { method: :patch }, class: 'link-nav' %><li>
						</ul>
					<% end %>
				</div>
			</ul>
	  </div>
  </div>
</div>