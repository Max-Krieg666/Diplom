<h1>Все Sections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.content %></td>
        <td><%= link_to 'Показать', section %></td>
        <td><%= link_to 'Редактировать', edit_section_path(section) %></td>
        <td><%= link_to 'Удалить', section, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создание Section', new_section_path %>
