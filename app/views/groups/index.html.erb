<h1>Все группы</h1>

<table class="table table-condensed table-bordered table-hover all_users">
  <thead>
    <tr>
      <th><%= Group.human_attribute_name(:numer) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.numer %></td>
        <td><%= link_to 'Показать', group %></td>
        <td><%= link_to 'Редактировать', edit_group_path(group) %></td>
        <td><%= link_to 'Удалить', group, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

