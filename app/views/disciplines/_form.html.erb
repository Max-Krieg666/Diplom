<%= form_for @discipline do |f| %>
  <%= error_messages_for(@discipline) %>

  <div class="form-group">
    <%= f.label Discipline.human_attribute_name(:title) %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label Discipline.human_attribute_name(:group_id) %><br>
    <%= select_group('discipline[group_id]', @discipline.group_id) %>
  </div>
  <div class="form-group">
    <%= f.label Discipline.human_attribute_name(:teachers) %><br>
    <%= select_tag 'user_ids', options_for_select( @teachers.collect {|t| [t.fio, t.id]}, @discipline.users.collect(&:id)), multiple: true, class: 'input-lg' %>
  </div>
  <div class="form-group">
  </div>
  <div class="actions">
    <%= f.submit t(:save) %>
  </div>
<% end %>
