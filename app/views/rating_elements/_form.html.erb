<%= form_for(@rating_element) do |f| %>
  <%= error_messages_for(@rating_element) %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="actions">
    <%= f.submit t(:save) %>
  </div>
<% end %>
