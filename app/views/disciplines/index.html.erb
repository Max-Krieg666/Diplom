<h1>Все дисциплины</h1>

<table class="table table-condensed table-bordered table-hover all_users">
  <thead>
    <tr>
      <th><%= Discipline.human_attribute_name(:title) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.title %></td>
        <td><%= link_to 'Показать', discipline %></td>
        <td><%= link_to 'Редактировать', edit_discipline_path(discipline) %></td>
        <td><%= link_to 'Удалить', discipline, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создание новой дисциплины', new_discipline_path %>
