<h1>Учебная группа №<%= @group.numer %></h1>

<table class="table table-condensed table-bordered table-hover one_group">
  <thead>
    <tr>
      <th>№</th>
      <th><%= User.human_attribute_name(:fio) %></th>
      <th><%= User.human_attribute_name(:login) %></th>
    </tr>
  </thead>

  <tbody>
    <% i = 1 %>
    <% @students.each do |student| %>
      <tr>
        <td><%= i %></td>
        <td><%= student.fio %></td>
        <td><%= student.login %></td>
      </tr>
      <% i += 1 %>
    <% end %>
  </tbody>
</table>

<%= link_to t(:edit), edit_group_path(@group) %> |
<%= link_to t(:back), groups_path %>
