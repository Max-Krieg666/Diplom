<div class="users_page">
	<div class="page-header">
	  <h1>Пользователи</h1>
	</div>

	<table class="table table-condensed table-bordered table-hover all_users">
	  <thead>
	    <tr class="tab_header">
	      <th><%= User.human_attribute_name(:fio) %></th>
	      <th><%= User.human_attribute_name(:login) %></th>
	      <th><%= User.human_attribute_name(:email) %></th>
	      <th><%= User.human_attribute_name(:role) %></th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @users.each do |user| %>
	      <tr class="users_tr">
	        <td><%= user.fio %></td>
	        <td><%= user.login %></td>
	        <td><%= user.email %></td>
	        <td><%= user.role_name %></td>
	        <td><%= link_to t(:show), user, class: 'edu_portal_link' %></td>
					<% if @current_user.administrator? %>
						<td><%= link_to t(:edit), edit_user_path(user), class: 'edu_portal_link' %></td>
						<td><%= link_to t(:destroy), user, method: :delete, data: { confirm: t(:confirm) }, class: 'edu_portal_link' %></td>
					<% end %>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<% if @current_user.administrator? %>
	  <br>
	  <%= link_to 'Новый пользователь', new_user_path, class: 'btn btn-default edu_portal_link' %>
	<% end %>
</div>