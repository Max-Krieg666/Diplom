<script type="text/javascript">
	$(document).ready(function(){
		$('#choose-rating-element').multiselect();
	});
</script>

<%= form_for(@student_rating_element) do |f| %>
  <%= error_messages_for(@student_rating_element) %>
	<%= hidden_field_tag 'student_rating_element[user_id]', params[:user_id] %>

  <div class="row">
    <div class="form-group col-md-3">
      <%= f.label :rating_element %><br>
      <%= select_rating_element('student_rating_element[rating_element_id]', params[:discipline_id], @student_rating_element.rating_element_id)%>
    </div>
    <div class="form-group col-md-1">
	    <%= f.label :value %><br>
	    <%= f.number_field :value, class: 'form-control', min: -20, max: 20 %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :comment %><br>
      <%= f.text_field :comment, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t(:save), class: 'btn btn-default' %>
  </div>
<% end %>
