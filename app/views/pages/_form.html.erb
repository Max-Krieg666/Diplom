<%= form_for(@page) do |f| %>
  <%= error_messages_for(@page) %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit t(:save), class: 'btn btn-default' %>
  </div>
<% end %>
