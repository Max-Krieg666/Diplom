<%= form_for(@rating_element) do |f| %>
  <%= error_messages_for(@rating_element) %>
  <% if params[:rating_id] %>
    <%= hidden_field_tag 'rating_element[rating_id]', params[:rating_id] %>
	<% elsif params[:rating_element].present? %>
		<%= hidden_field_tag 'rating_element[rating_id]', params[:rating_element][:rating_id] %>
  <% end %>
	<div class="row">
	  <div class="form-group col-md-5">
	    <%= f.label :title %><br>
	    <%= f.text_field :title, class: 'form-control' %>
	  </div>

	  <div class="form-group col-md-2">
	    <%= f.label :score %><br>
	    <%= f.number_field :score, min: 1, max: 100 - @rating.score_now, class: 'form-control' %>
	  </div>
	</div>

  <div class="actions">
    <%= f.submit t(:save), class: 'btn btn-default' %>
  </div>
<% end %>
