<h1>Все документы</h1>

<table class="table table-condensed table-bordered table-hover all_users">
  <thead>
    <tr>
      <th><%= Document.human_attribute_name(:title) %></th>
      <th><%= Document.human_attribute_name(:file) %></th>
      <th><%= Document.human_attribute_name(:user_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.file %></td>
        <td><%= document.user.login %></td>
        <td><%= link_to 'Показать', document %></td>
        <td><%= link_to 'Редактировать', edit_document_path(document) %></td>
        <td><%= link_to 'Удалить', document, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Загрузить новый документ', new_document_path %>
