<div class="users_page">
	<div class="page-header">
	  <h1>Пользователи</h1>
	</div>

	<table class="table table-condensed table-bordered table-hover all_users">
	  <thead>
	    <tr class="tab_header">
	      <th><%= User.human_attribute_name(:fio) %></th>
	      <th><%= User.human_attribute_name(:login) %></th>
	      <th><%= User.human_attribute_name(:email) %></th>
	      <th><%= User.human_attribute_name(:role) %></th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @users.each do |user| %>
	      <tr class="users_tr">
	        <td><%= user.fio %></td>
	        <td><%= user.login %></td>
	        <td><%= user.email %></td>
	        <td><%= user.role_name %></td>
	        <td><%= link_to 'Показать', user %></td>
	        <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
	        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<br>

	<%= link_to 'Новый пользователь', new_user_path %>
</div>