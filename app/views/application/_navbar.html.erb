<div class="navbar navbar-inverse footer">
  <div class="container">
    <div class="navbar-header">
	    <%= link_to ?#, class: 'navbar-toggle collapsed', data: { toggle: 'collapse', target: '#menu' } do %>
	      <%= fa_icon 'bars' %>
	    <% end %>
      <%= link_to t(:profile), @current_user, class: 'navbar-brand' %>
    </div>
	  <div id="menu" class="collapse navbar-collapse">
		  <ul class="nav navbar-nav">
			  <% if @current_user.presence %>
				  <% if @current_user.role == 0 %>
				    <li><%= link_to t(:my_group), @current_user.group %></li>
						<li><%= link_to t(:my_disciplines), disciplines_path %></li>
		        <li><%= link_to t(:my_documents), documents_path %></li>
				  <% elsif @current_user.role == 1 %>
            <li><%= link_to t(:my_disciplines), disciplines_path %></li>
		        <li><%= link_to t(:my_documents), documents_path %></li>
          <% else %>
            <li><%= link_to t(:all_users), users_path %></li>
            <li><%= link_to t(:all_groups), groups_path %></li>
            <li><%= link_to t(:all_disciplines), disciplines_path %></li>
		        <li><%= link_to t(:all_documents), documents_path %></li>
				  <% end %>
        <% end %>
		  </ul>
	    <ul class="nav navbar-nav navbar-right">
		    <% unless @current_user %>
	        <li><%= link_to t(:registration), new_user_path %></li>
	        <li><%= link_to t(:login), login_path %></li>
		    <% else %>
		      <li>
			      <span class="navbar-text"><%= @current_user.login %></span>
	          <%= link_to t(:logout), logout_path, data: { method: :patch } %>
			    </li>
		    <% end %>
		  </ul>
	  </div>
  </div>
</div>